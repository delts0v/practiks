                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FF57F02B" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <TextBlock Text="USD"/>
            <TextBlock Text="EUR"/>
        </ComboBox>
        <Button x:Name="Next" Content="Вперёд" HorizontalAlignment="Left" Height="68" VerticalAlignment="Top" Width="85" FontSize="20" FontWeight="Bold" Click="Next_Click" Background="#FF57F02B"/>
