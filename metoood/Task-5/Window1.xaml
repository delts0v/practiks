<Window x:Class="Task_5.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_5"
        mc:Ignorable="d"
        Title="2" Height="348" Width="322">
    <Grid>
        <TextBox x:Name="Value_1" HorizontalAlignment="Center" Height="58" Margin="0,122,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102" FontSize="20"/>
